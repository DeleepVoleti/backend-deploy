pipeline {
    agent {
        label 'Agent-1'
    }
    options {
        timeout(time: 30, unit: 'MINUTES')
        disableConcurrentBuilds()
        ansiColor('xterm')
    }
    parameters{
        string( name: 'appVersion', defaultValue:'1.0.0', description:'this is the app version')
    }
    stages {
        stage('read the version'){
            steps{
             sh """
               echo "app version is ${appVersion}"
             """
            }
        }
   }
    post { 
        always { 
            deleteDir()
        }
    }
}